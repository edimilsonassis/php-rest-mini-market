<div class="mt-3">
	<div class="row g-3">
		<div class="col-xl-6">
			<form id="form-type">
				<div class="row g-3">
					<input type="text" class="d-none" name="id" placeholder="" value="{{ type.tpo_id }}">

					<div class="col-12">
						<label for="description" class="form-label">Descrição</label>
						<input type="text" class="form-control" name="description" placeholder="" value="{{ type.tpo_description }}" required="">
					</div>

					<div class="col-12">
						<label for="price" class="form-label">Valor</label>
						<div class="input-group has-validation">
							<span class="input-group-text">%</span>
							<input type="number" step="any" class="form-control" name="tax" placeholder="" value="{{ type.tpo_tax }}" required="">
						</div>
					</div>

				</div>
				<button class="d-none"></button>
			</form>
		</div>
	</div>

	<script src="/assets/js/type.js"></script>

</div>
