<!doctype html>
<html lang="en" data-bs-theme="auto">
	{{ include('/common/head.html.twig') }}

	<body>
		{{ include('/common/common.html.twig') }}

		{{ include('/common/header.html.twig') }}

		<div class="container-fluid">
			<div class="row">
				{{ include('/common/sidebar.html.twig') }}

				<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
					<div class="flex-wrap pt-3 pb-2 mb-3 d-flex justify-content-between flex-md-nowrap align-items-center border-bottom">
						<h3>
							{{pageTitle}}
						</h3>
						<div class="mb-2 btn-toolbar mb-md-0 ">
							<button type="button" id="newSale" class="btn btn-primary ms-2">
								<span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill me-1" viewbox="0 0 16 16">
									<path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
								</svg>
								Nova
							</button>
							<button type="button" id="closeSale" class="btn btn-success ms-2 d-none">
								<span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-check-fill me-1" viewbox="0 0 16 16">
									<path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5v-.5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zm-.646 5.354a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
								</svg>
								Finalizar
							</button>
						</div>
					</div>
					<div class="mt-3 row">
						<div class="col-md-7 col-lg-8">
							<form class="needs-validation" id="form-pdv">
								<div class="row g-3">

									<div class="col-12 col-sm-3">
										<label for="firstName" class="form-label">Qtd.</label>
										<input type="text" class="form-control" name="qtde" placeholder="" value="1" required="">
									</div>

									<div class="col-12 col-sm-9">
										<label for="lastName" class="form-label">Cod. Produto</label>

										<div class="input-group">
											<input type="text" class="form-control" name="id_product" placeholder="" value="" required="">
											<button type="submit" class="btn btn-primary">
												<span class="d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
												<span role="status-hidden">
													<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill me-1" viewbox="0 0 16 16">
														<path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
													</svg>
												</span>
											</button>
										</div>
									</div>

								</div>

								<div class="my-4"></div>

								<div class="mb-4">
									<div class="border rounded-2 table-responsive">
										<table id="table-items" class="table mb-0 table-borderless table-hover table-sm table-striped">
											<thead>
												<tr>
													<th class="ps-3" scope="col">#</th>
													<th scope="col">Nome</th>
													<th scope="col" class="text-end">Qtd.</th>
													<th scope="col" class="text-end">V. Und.</th>
													<th class="pe-3 text-end" scope="col">V. Total</th>
												</tr>
											</thead>
											<tbody>
												<tr for="item">
													<td class="ps-3" data-key="index">#</td>
													<td data-key="sls_ite_description"></td>
													<td class="text-end" data-key="sls_ite_qtd"></td>
													<td class="text-end" data-format="money" data-key="sls_ite_price"></td>
													<td class="pe-3 text-end" data-format="money" data-key="sls_ite_price_total"></td>
												</tr>
												<tr for="empty">
													<td colspan="5" class="py-4 text-center text-muted">Sem Items</td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>

							</form>
						</div>
						<div class="col-md-5 col-lg-4 order-md-last">
							<div id="checkout" class="mb-4">
								<h4 class="mb-3 text-sm-end text-nowrap text-truncate">
									<span data-key="sls_ite_description" data-placeholder="Checkout" class="text-primary">Checkout</span>
								</h4>
								<ul class="mb-3 list-group">
									<li title="Quantidade" class="list-group-item d-flex justify-content-between lh-sm">
										<h6 class="my-0">Qtd.</h6>
										<strong data-key="sls_ite_qtd"></strong>
									</li>
									<li title="Valor Unitário Imposto" class="list-group-item d-flex justify-content-between lh-sm">
										<h6 class="my-0">Imp.</h6>
										<strong data-key="sls_ite_tax" data-format="money"></strong>
									</li>
									<li title="Valor Unitário" class="list-group-item d-flex justify-content-between lh-sm">
										<h6 class="my-0">Und.</h6>
										<strong data-key="sls_ite_price" data-format="money"></strong>
									</li>
									<li title="Valor Total Imposto" class="list-group-item d-flex justify-content-between lh-sm">
										<h6 class="my-0">Total Imp.</h6>
										<strong data-key="sls_ite_tax_total" data-format="money"></strong>
									</li>
									<li class="list-group-item d-flex justify-content-between lh-sm text-primary">
										<h4 class="my-0">Total Item</h4>
										<h4 data-key="sls_ite_price_total" data-format="money" class="my-0"></h4>
									</li>
								</ul>
							</div>

							<div id="resume" class="mb-4">
								<h4 class="mb-3 d-flex justify-content-sm-end align-items-center">
									<span data-key="sale.sls_client" title="Cliente" data-placeholder="#" class="badge bg-primary rounded-pill">#</span>
								</h4>
								<ul class="mb-3 list-group">
									<li class="list-group-item d-flex justify-content-between lh-sm">
										<h6 class="my-0">Impostos</h6>
										<h6 data-key="sale.sls_total_price_taxes" data-format="money" data-placeholder="0" class="my-0">R$ 0</h6>
									</li>
									<li class="list-group-item d-flex justify-content-between text-success">
										<h3 class="my-0">Total</h3>
										<h3 data-key="sale.sls_total_price" data-format="money" data-placeholder="0" class="my-0">R$ 0</h3>
									</li>
								</ul>
							</div>
						</div>

					</div>
				</main>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script src="/assets/js/main.js"></script>
		<script src="/assets/js/pdv.js"></script>
		<script src="/assets/dist/js/bootstrap.bundle.min.js"></script>

	</body>

</html>
