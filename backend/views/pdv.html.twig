<!doctype html>
<html lang="en" data-bs-theme="auto">
	{{ include('/common/head.html.twig') }}

	<body>
		{{ include('/common/common.html.twig') }}

		{{ include('/common/header.html.twig') }}

		<div class="container-fluid">
			<div class="row">
				{{ include('/common/sidebar.html.twig') }}

				<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
					<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
						<h1>
							{{pageTitle}}
						</h1>
						<div class="btn-toolbar mb-2 mb-md-0 ">
							<button type="button" id="newSale" class="btn btn-primary ms-2">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill me-1" viewbox="0 0 16 16">
									<path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
								</svg>
								Nova
							</button>
							<button type="button" id="closeSale" class="btn btn-success ms-2 d-none">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-check-fill me-1" viewbox="0 0 16 16">
									<path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5v-.5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zm-.646 5.354a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
								</svg>
								Finalizar
							</button>
						</div>
					</div>
					<div class="row g-3">
						<div class="row mt-3">
							<div class="col-md-5 col-lg-4 order-md-last">
								<div id="checkout" class="mb-5">
									<h4 class="text-end text-nowrap text-truncate mb-3">
										<span data-key="sls_ite_description" data-placeholder="Checkout" class="text-primary">Checkout</span>
									</h4>
									<ul class="list-group mb-3">
										<li class="list-group-item d-flex justify-content-between lh-sm">
											<h5 class="my-0">Qtd.</h5>
											<strong data-key="sls_ite_qtd"></strong>
										</li>
										<li class="list-group-item d-flex justify-content-between lh-sm">
											<h5 class="my-0">R$ Un.</h5>
											<strong data-key="sls_ite_price" data-format="money"></strong>
										</li>
										<li class="list-group-item d-flex justify-content-between lh-sm">
											<h5 class="my-0">R$ Total</h5>
											<strong data-key="sls_ite_total" data-format="money"></strong>
										</li>
									</ul>
								</div>

								<div id="resume" class="mb-5">
									<h4 class="d-flex justify-content-between align-items-center mb-3">
										<span class="text-primary">Resumo</span>
										<span data-key="sale.sls_id" title="ID da Venda" data-placeholder="#" class="badge bg-primary rounded-pill">#</span>
									</h4>
									<ul class="list-group mb-3">
										<li class="list-group-item d-flex justify-content-end">
											<h5 data-key="sale.sls_client" data-placeholder="..." class="my-0">...</h5>
										</li>
										<li class="list-group-item d-flex justify-content-between lh-sm">
											<h6 class="my-0">Impostos</h6>
											<h6 data-key="sale.sls_total_price_taxes" data-format="money" data-placeholder="0" class="my-0">R$ 0</h6>
										</li>
										<li class="list-group-item d-flex justify-content-between">
											<h3 class="my-0">Total</h3>
											<h3 data-key="sale.sls_total_price" data-format="money" data-placeholder="0" class="my-0">R$ 0</h3>
										</li>
									</ul>
								</div>
							</div>

							<div class="col-md-7 col-lg-8">
								<form class="needs-validation" id="form-pdv">
									<div class="row g-3">

										<div class="col-12 col-sm-3">
											<label for="firstName" class="form-label">Qtd.</label>
											<input type="text" class="form-control" name="qtde" placeholder="" value="1" required="">
										</div>

										<div class="col-12 col-sm-9">
											<label for="lastName" class="form-label">Cod. Produto</label>

											<div class="input-group">
												<input type="text" class="form-control" name="id_product" placeholder="" value="" required="">
												<button type="submit" class="btn btn-primary">
													<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill me-1" viewbox="0 0 16 16">
														<path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
													</svg>
												</button>
											</div>
										</div>

									</div>

									<hr class="my-4">

									<div class="table-responsive">
										<table id="table-items" class="table table-striped table-sm">
											<thead>
												<tr>
													<th scope="col">#</th>
													<th scope="col" class="text-end">Nome</th>
													<th scope="col" class="text-end">R$ Qtd.</th>
													<th scope="col" class="text-end">R$ Total</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td data-key="sls_ite_id_product">#</td>
													<td data-key="sls_ite_description">data</td>
													<td class="text-end" data-key="sls_ite_qtd">data</td>
													<td class="text-end" data-format="money" data-key="sls_ite_total">data</td>
												</tr>
											</tbody>
										</table>
									</div>

								</form>
							</div>
						</div>
					</div>
				</main>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script src="/assets/js/main.js"></script>
		<script src="/assets/js/pdv.js"></script>
		<script src="/assets/dist/js/bootstrap.bundle.min.js"></script>

	</body>

</html>
